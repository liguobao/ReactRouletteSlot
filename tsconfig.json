{
    "compilerOptions": {
        "jsx": "react",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowUnusedLabels": false,
        "allowUnreachableCode": false,
        "baseUrl": "./src",
        "paths": {
            "@assets/*": ["assets/*"],
            "@assets": ["assets"],
            "@components/*": ["components/*"],
            "@common/*": ["common/*"],
            "@routes/*": ["routes/*"],
            "@routes": ["routes"],
            "@modules/*": ["store/modules/*"],
            "@store/*": ["store/*"],
            "@store": ["store"],
            "@config/*": ["config/*"],
            "@src/*": ["./*"],
        },
        "lib": ["es6", "dom"],
        "experimentalDecorators": true,
        "importHelpers": true,
        "noEmitHelpers": true,
        "target": "es5",
        "module": "esnext",
        "strict": false
    },

    "exclude": ["node_modules", "**/*.spec.ts"]
}